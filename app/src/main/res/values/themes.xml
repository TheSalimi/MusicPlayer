<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MusicPlayerNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="splash_screen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name = "android:windowBackground">
            @drawable/splash_screen
        </item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name = "cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name = "mySeekBar" parent = "Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name ="android:progressTint">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="themeColor" format="color"/>

    <!--    Background as well as text color for alert dialog buttons-->
    <attr name="dialogTextColor" format="color"/>
    <attr name="dialogBtnBackground" format="color"/>

    //Theme for Activities
    <style name="black" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/gray</item>
        <item name="colorPrimary">?attr/themeColor</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/themeColor</item>
        <item name="dialogBtnBackground">?attr/themeColor</item>
        <item name="dialogTextColor">@color/white</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="white" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themeColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="dialogBtnBackground">?attr/themeColor</item>
        <item name="dialogTextColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    //Theme for Navigation Drawer
    <style name="blackNav" parent="Theme.MaterialComponents.Light">
        <item name="themeColor">@color/gray</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cool_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:navigationBarColor">?attr/themeColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/themeColor</item>
        <item name="dialogBtnBackground">?attr/themeColor</item>
        <item name="dialogTextColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="whiteNav" parent="Theme.MaterialComponents.Light">
        <item name="themeColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/cool_pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="dialogBtnBackground">?attr/themeColor</item>
        <item name="dialogTextColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name = "cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name = "mySeekBar" parent = "Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name ="android:progressTint">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>